---
import { siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon";

type Props = {
	className?: string;
};

const { className } = Astro.props;
---

<footer class={cn(className)}>
	<div
		class="container flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0"
	>
		<div
			class="flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0"
		>
			<a href="/" aria-label="Sharukh's homepage">
				<Icon name="logo" class="size-8" /></a
			>

			<p
				class="text-center text-sm leading-loose md:text-left balance-text"
			>
				Built using{" "}
				<a
					href="https://astro.build/"
					target="_blank"
					rel="noreferrer"
					class="font-medium underline underline-offset-4"
				>
					Astro
				</a>
				<a
					href="https://ui.shadcn.com"
					target="_blank"
					rel="noreferrer"
					class="font-medium underline underline-offset-4"
				>
					, React.JS
				</a>
				<a
					href="https://tailwindcss.com/"
					target="_blank"
					rel="noreferrer"
					class="font-medium underline underline-offset-4"
				>
					& Tailwind.css
				</a>
				. Hosted on{" "}
				<a
					href="https://vercel.com"
					target="_blank"
					rel="noreferrer"
					class="font-medium underline underline-offset-4"
				>
					Vercel
				</a>
				. In partnership with{" "}
				<a
					href={siteConfig.url}
					target="_blank"
					rel="noreferrer"
					class="font-medium underline underline-offset-4"
				>
					DashDrop
				</a>
				. The site is still under development!
			</p>
		</div>
	</div>
</footer>
